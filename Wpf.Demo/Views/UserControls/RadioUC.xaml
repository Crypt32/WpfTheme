<UserControl x:Class="Wpf.Demo.Views.UserControls.RadioUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox Header="Radio Button">
        <StackPanel>
            <RadioButton GroupName="one" Content="My radio"/>
            <RadioButton GroupName="one" Content="My radio" IsChecked="True"/>
            <RadioButton GroupName="two" Content="My radio" IsEnabled="False"/>
            <RadioButton GroupName="two" Content="My radio" IsChecked="True" IsEnabled="False"/>
        </StackPanel>
    </GroupBox>
</UserControl>
