<UserControl x:Class="Wpf.Demo.Views.UserControls.ProgressBarUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:behaviors="clr-namespace:SysadminsLV.WPF.OfficeTheme.Toolkit.Behaviors;assembly=Wpf.OfficeTheme"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel behaviors:MarginSetter.Margin="3">
        <ProgressBar Value="73" Height="15"/>
        <ProgressBar Value="73" Height="15" IsEnabled="False"/>
        <ProgressBar IsIndeterminate="True" Height="15"/>
        <ProgressBar IsIndeterminate="True" Height="15" IsEnabled="False"/>

        <ProgressBar Style="{StaticResource PbStyle}" Value="73" Height="15"/>
        <ProgressBar Style="{StaticResource PbStyle}" Value="73" Height="15" IsEnabled="False"/>
        <ProgressBar Style="{StaticResource PbStyle}" IsIndeterminate="True" Height="15"/>
        <ProgressBar Style="{StaticResource PbStyle}" IsIndeterminate="True" Height="15" IsEnabled="False"/>
    </StackPanel>
</UserControl>
